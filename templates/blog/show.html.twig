{% extends 'base.html.twig' %}

{% block title %}Affichage de l'article{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ absolute_url(asset('assets/css-admin/blog-show.css')) }}">
{% endblock %}

{% block body %}
    <h1>Affichage de l'article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ blog.content }}</td>
            </tr>
            <tr>
                <th>Date de publication</th>
                <td>{{ blog.publicationDate ? blog.publicationDate|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">Retour à la liste</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">Éditer</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
