{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1>Affichage d'un utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin_login.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ admin_login.username }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ admin_login.password }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ admin_login.level }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ admin_login.creationDate ? admin_login.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_login_index') }}">Retour à la liste</a>

    <a href="{{ path('admin_login_edit', {'id': admin_login.id}) }}">Éditer</a>

    {{ include('admin_login/_delete_form.html.twig') }}
{% endblock %}
