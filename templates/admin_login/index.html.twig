{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Mot de passe</th>
                <th>Niveau</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin_login in admin_logins %}
            <tr>
                <td>{{ admin_login.id }}</td>
                <td>{{ admin_login.username }}</td>
                <td>{{ admin_login.password }}</td>
                <td>{{ admin_login.level }}</td>
                <td>{{ admin_login.creationDate ? admin_login.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_login_show', {'id': admin_login.id}) }}">Afficher</a>
                    <a href="{{ path('admin_login_edit', {'id': admin_login.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune entrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_login_new') }}">Ajouter un nouvel utilisateur</a>
    <a class="nav-link" href="{{ url("logout") }}">Se déconnecter</a>
    <a class="nav-link" href="{{ url("blog_index") }}">Liste des articles</a>

{% endblock %}
