{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

{% for blog in blogs %}
    <section>   

        <img src={{ blog.image }} alt="photo" width="300px">
        
            <table>
                <tr>
                    <td>{{ blog.title }}</td>
                    <td>{{ blog.publicationDate ? blog.publicationDate|date('D-M-Y H:i:s') : "" }}</td>
                </tr>
            </table>
        
        <p>{{ blog.content | slice (0, 50) | raw }}...</p>  
                
    </section>
{% endfor %}

{% endblock %}